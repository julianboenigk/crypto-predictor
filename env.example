#############################################
# BASE SETTINGS
#############################################

ENVIRONMENT=paper             #paper, testnet, live
TRADING_HARD_STOP=true
DRY_RUN=true
TIMEZONE=Europe/Berlin

#############################################
# TRADING SAFETY FRAME
#############################################

MAX_OPEN_TRADES=3
MAX_TRADES_PER_DAY=50
MAX_DAILY_RISK_R=5.0
MAX_RISK_PER_TRADE_R=1.0
FINAL_SCORE_MIN=0.6

#############################################
# TELEGRAM NOTIFICATIONS
#############################################

TELEGRAM_ENABLED=true
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_SELF_EVAL=true
TELEGRAM_META_ENABLED=true
TELEGRAM_SCORE_MIN=0.6
TELEGRAM_BACKTEST_SUMMARY=true
TELEGRAM_LIVE_SUMMARY=true
TELEGRAM_BACKTEST_EQUITY=true

#############################################
# CRYPTONEWS AGENT
#############################################

CRYPTONEWS_ENABLED=true
CRYPTONEWS_WINDOW=last60min
CRYPTONEWS_API_KEY=


#############################################
# TECHNICAL / META SETTINGS
#############################################

DYNAMIC_WEIGHTS=false
WEIGHTS_LOOKBACK_LINES=500
WEIGHTS_SIGNAL_THR=0.4

META_MIN_ABS_SCORE=0.6
TECH_DRIVER_LONG=0.6
TECH_DRIVER_SHORT=-0.6
TECH_VETO_SCORE_MIN=0.5
TECH_VETO_CONF_MIN=0.5
CRITICAL_AGENTS=technical


#############################################
# BACKTEST SETTINGS
#############################################

BACKTEST_RR=1.5
BINANCE_FEE_PCT=0.001   # 0.1 % pro Seite (korrekt)
BACKTEST_FEE_SIDES=2.0
BACKTEST_SL_PCT=0.012   # 1.2 % Stop-Loss (statt 0.4 %)


#############################################
# BINANCE SPOT TESTNET (AKTIV)
#############################################

BINANCE_TESTNET_ENABLED=true
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_API_SECRET=
BINANCE_TESTNET_BASE=https://testnet.binance.vision
BINANCE_TESTNET_TIMEOUT_SEC=10
BINANCE_TESTNET_MAX_RETRIES=2
BINANCE_TESTNET_ORDER_QTY=0.001
TESTNET_SCORE_MIN=0.6

#############################################
# BINANCE LIVE (DEAKTIVIERT)
#############################################

BINANCE_LIVE_ENABLED=false
BINANCE_LIVE_API_KEY=
BINANCE_LIVE_API_SECRET=
BINANCE_LIVE_BASE=https://api.binance.com

LIVE_SCORE_MIN=0.6
LIVE_ORDER_QTY=0.001
MAX_LIVE_RISK_USD_PER_DAY=20

BINANCE_LIVE_TIMEOUT_SEC=10
BINANCE_LIVE_MAX_RETRIES=2

#############################################
# LLM SETTINGS
#############################################

OPENAI_API_KEY=
MAX_LLM_TOKENS_PER_DAY=200000
MAX_LLM_CALLS_PER_DAY=400

OPENAI_MODEL_RESEARCH=gpt-4.1-mini
OPENAI_MODEL_META=gpt-4.1-mini
OPENAI_MODEL_SELF_EVAL=gpt-4.1-mini
OPENAI_MODEL_DEFAULT=gpt-4.1-mini

#############################################
# LOG ROTATION
#############################################

LOG_ROTATE_ENABLED=true
LOG_ROTATE_FILES=data/runs.log,data/paper_trades_closed.jsonl
LOG_ROTATE_MAX_MB=10          # max. Dateigröße pro Log (in Megabyte)
LOG_ROTATE_MAX_LINES=50000    # max. Anzahl Zeilen pro Log
LOG_ROTATE_KEEP=5             # wie viele alte Versionen behalten (log, log.1, ..., log.5)
