# --- Binance (Spot) ---
BINANCE_API_KEY=
BINANCE_API_SECRET=
DB_URL=sqlite:///data/signals.db
BINANCE_BASE=https://api.binance.com
BINANCE_TIMEOUT_SEC=10
BINANCE_MAX_RETRIES=2
# Live (nur Konfiguration, noch keine Orders)
BINANCE_LIVE_ENABLED=false
BINANCE_LIVE_API_KEY=
BINANCE_LIVE_API_SECRET=
BINANCE_LIVE_BASE=https://api.binance.com
# --- Trading-Sicherheit ---
TRADING_HARD_STOP=true        # Wenn true: keine Orders (Paper/Testnet/Live)
MAX_OPEN_TRADES=0              # 0 = deaktiviert
MAX_TRADES_PER_DAY=0           # 0 = deaktiviert
MAX_DAILY_RISK_R=0.0           # 0.0 = deaktiviert
MAX_RISK_PER_TRADE_R=1.0       # Standard: 1R pro Trade
FINAL_SCORE_MIN=0.4
#Cryptonews
CRYPTONEWS_ENABLED=true
CRYPTONEWS_WINDOW=last60min  # options: last15min, last60min, today, last7days, etc.
CRYPTONEWS_API_KEY=
#Technical settings
DYNAMIC_WEIGHTS=true
WEIGHTS_LOOKBACK_LINES=500
WEIGHTS_SIGNAL_THR=0.4
META_MIN_ABS_SCORE=0.7
META_MIN_ABS_SCORE=0.7
TECH_DRIVER_LONG=0.6
TECH_DRIVER_SHORT=-0.6
TECH_VETO_SCORE_MIN=0.5
TECH_VETO_CONF_MIN=0.5
CRITICAL_AGENTS=technical
BACKTEST_RR=1.5
#LLM
OPENAI_API_KEY=
MAX_LLM_TOKENS_PER_DAY=200000
MAX_LLM_CALLS_PER_DAY=100
OPENAI_MODEL_RESEARCH=gpt-4.1-mini
OPENAI_MODEL_META=gpt-4.1-mini
OPENAI_MODEL_SELF_EVAL=gpt-4.1-mini
OPENAI_MODEL_DEFAULT=gpt-4.1-mini
#Telegram
TELEGRAM_ENABLED=true
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=     # or negative for groups
TELEGRAM_SELF_EVAL=true
TELEGRAM_META_ENABLED=true
TELEGRAM_SCORE_MIN=0.85
TELEGRAM_BACKTEST_SUMMARY=true
# --- Fee-Konfiguration für Backtests ---
BACKTEST_RR=1.5
BACKTEST_SL_PCT=0.004         # entspricht 0.4% Stop-Loss Distanz (1R)
BINANCE_FEE_PCT=0.001         # 0.1% Fee pro Order
BACKTEST_FEE_SIDES=2.0        # Entry + Exit -> 2 Orders pro Trade
# --- Binance Spot Testnet ---
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_API_SECRET=
# Neuer offizieller Demo-Endpoint (kannst du per ENV übersteuern)
BINANCE_TESTNET_BASE=https://testnet.binance.vision
BINANCE_TESTNET_TIMEOUT_SEC=10
BINANCE_TESTNET_MAX_RETRIES=2
# Testnet-Execution-Toggle + Standard-Menge
BINANCE_TESTNET_ENABLED=false      # später true setzen
BINANCE_TESTNET_ORDER_QTY=0.001    # z.B. 0.001 BTC / 0.1 ETH etc.
# --- Basis ---
ENVIRONMENT=testnet  # paper | testnet | live
DRY_RUN=true       # Master-Killswitch auf Code-Ebene
TIMEZONE=Europe/Berlin
